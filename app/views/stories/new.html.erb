<div class="row">
  <div class="col-md-8">
    <%= form_for @story do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 20, class: "form-control" %>
      </div>
        
        <%= f.submit "Submit", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>