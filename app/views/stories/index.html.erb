<%= provide(:title, "Stories") %>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="row">
      <div class="col-12">
        <%= render template: 'categories/index' %>
      </div>
    <div class="row">
      <div class="col-12">
        <%= paginate @stories %>
      </div>
    </div>
    <div class="row stories">
      <div class="col-12">
        <% @stories.each do |story| %>
          <div class="row story-row">
            <%= render 'shared/story_card', story: story %>
          </div> 
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= paginate @stories %>
      </div>
    </div>
  </div>
</div>





