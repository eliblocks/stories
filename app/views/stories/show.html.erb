<% provide(:title, @story.title) %>
<div class="row">
  <div class="offset-md-2 col-md-8">
    <h1 class="story-title"><%= @story.title %></h1>
  </div>
</div>

<div class="row story-body">
  <div class="offset-md-2 col-md-8">
    <%= story_format(@story.body) %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-2">
    <%= vote_button(@story, false) %>
    <%= vote_button(@story, true) %>
  </div>
  <div class="col-md-6">
    <%= switch(@story, false) %>
    <%= switch(@story, true) %>
  </div>
</div>