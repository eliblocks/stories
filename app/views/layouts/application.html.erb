<!DOCTYPE html>
<html>
  <head>
    <title>Stories</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= render 'layouts/nav' %>
      <div class="container-fluid">
        <%= yield %>
      </div>
    <% else %>
      <%= link_to 'login', login_path %>
    <% end %>
  </body>
</html>
