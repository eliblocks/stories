<ul class="nav nav-pills nav-fill">
  <% @categories.each do |category| %>
    <% if params[:category] == category.id.to_s %>
        <li class="nav-item"><%= link_to category.name, url_for, class: "nav-link active" %></li>
    <% else %>
        <li class="nav-item"><%= link_to category.name, url_for(category: category.id), class: "nav-link" %></li>
    <% end %>
  <% end %>
</ul>
