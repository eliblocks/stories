<%= provide(:title, @user.name) %>
<br>
<div class="row">
  <div class="col-md-4">
    <div class="card">
      <%= image_tag @user.image || 'blank_image.png', class: "card-img-top img-fluid", size: "480x480", alt: "Card image cap" %>
      <div class="card-block">
        <h4 class="card-title"><%= @user.name %></h4>
      </div>
      <div class="card-footer">
        <%= vote_button(@user, false) %>
        <%= vote_button(@user, true) %>
      </div>
    </div>
  </div>
  <div class="col-md-7">
    <div class="row">
      <div class="col-md-12">
        <%= paginate @stories %>
      </div>
    </div>
    <% @stories.each do |story| %>
        <div class="row story-row">
          <div class="col-md-12">
            <%= render 'shared/story_card', story: story %>
          </div>
        </div>
    <% end %>
    <div class="row">
      <div class="col-md-12">
        <%= paginate @stories %>
      </div>
    </div>
  </div>
</div>
  
