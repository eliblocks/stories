<%= provide(:title, "Users") %>
<% @users.each_with_index do |user, index| %>
  <% if index % 5 == 0  || index == 0 %>
    </div>
    </div>
    </div><br>
    <div class="row">
    <div class="col-md-10 offset-md-1">
    <div class="card-group">
  <% end %>
  <div class="card">
    <%= image_tag user.image || 'blank_image.png', class: "card-img-top img-fluid", size: "400x400", alt: "Card image cap" %>
    <div class="card-block">
      <h4 class="card-title"><%= link_to user.name, user_path(user) %></h4>
    </div>
    <div class="card-footer">
      <%= vote_button(user, false) %>
      <%= vote_button(user, true) %>
    </div>
  </div>
<% end %>




