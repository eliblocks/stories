<%= provide(:title, "Hidden Writers") %>
<% @users.each_with_index do |user, index| %>
  <% if index % 5 == 0  || index == 0 %>
    </div>
    </div>
    </div><br>
    <div class="row">
    <div class="col-md-10 offset-md-1">
    <div class="card-group">
  <% end %>
  <div class="card">
    <%= image_tag user.image || 'blank_image.png', class: "card-img-top img-fluid", size: "400x400", alt: "Card image cap" %>
    <div class="card-block">
      <h4 class="card-title"><%= link_to user.name, user_path(user) %></h4>
    </div>
    <div class="card-footer">
      <%= render 'shared/vote', path: relationship_path(user.passive_relationships.first),
                                toggle: "active", 
                                vote_params: {user_id: user.id, type: true},
                                count: user.blocks_count,
                                http: :delete, 
                                icon: "fa fa-times" %>
    </div>
  </div>
<% end %>
<% (5 - @users.count % 5).times do |i| %>
  <div class="card">
  </div>
<% end %>
