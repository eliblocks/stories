<table class="table">
  <thead class="thead">
    <tr>
      <th>Action</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= button_to "Unhide", 
                relationship_path(current_user.active_relationship(user)), 
                method: :delete %>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
