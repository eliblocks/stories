		<td class="chapter-text">
		<!-- google_ad_section_start -->
				<span class="box-creative-left">
			<!-- Casale Media: 336x280, 300x250 (Rectangle) -->
	<script type="text/javascript">
	var CasaleArgs = new Object();
	CasaleArgs.version = 2;
